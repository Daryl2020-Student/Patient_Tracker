@page
@model Patient_Tracker.Pages.Prescriptions.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<b>Prescription</b>
<hr />
<div class="row">
    <div class="col-md-4">

        <hr />
        <dl class="row">
            <label asp-for="Prescription.PrescriptionPPS" class="control-label"></label>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Patient.PPSNo)</dd>
            <label asp-for="Prescription.PatientsName" class="control-label"></label>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Patient.FirstName) @Html.DisplayFor(model => model.Patient.LastName)</dd>
        </dl>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Prescription.Medication" class="control-label"></label>
                <input asp-for="Prescription.Medication" class="form-control" />
                <span asp-validation-for="Prescription.Medication" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prescription.Dosage" class="control-label"></label>
                <input asp-for="Prescription.Dosage" class="form-control" />
                <span asp-validation-for="Prescription.Dosage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prescription.Quantity" class="control-label"></label>
                <input asp-for="Prescription.Quantity" class="form-control" />
                <span asp-validation-for="Prescription.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prescription.Date" class="control-label"></label>
                <input asp-for="Prescription.Date" class="form-control" />
                <span asp-validation-for="Prescription.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prescription.Time" class="control-label"></label>
                <input asp-for="Prescription.Time" class="form-control" />
                <span asp-validation-for="Prescription.Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prescription.Doctor" class="control-label"></label>
                <input asp-for="Prescription.Doctor" class="form-control" />
                <span asp-validation-for="Prescription.Doctor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prescription.Notes" class="control-label"></label>
                <input asp-for="Prescription.Notes" class="form-control" />
                <span asp-validation-for="Prescription.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
