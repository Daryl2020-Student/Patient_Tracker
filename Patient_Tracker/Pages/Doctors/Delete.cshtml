@page
@model Patient_Tracker.Pages.Doctors.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<style>
    .center-content {
        text-align: center;
        max-width: 400px;
        margin: 0 auto;
    }
</style>

<div class="container center-content">
    <h3 class="text-center">Are you sure you want to delete this Doctor?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">First Name:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Doctor.DFirstName)</dd>
            <dt class="col-sm-4">Last Name:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Doctor.DLastName)</dd>
            <dt class="col-sm-4">Email:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Doctor.Email)</dd>
            <dt class="col-sm-4">Address:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Doctor.Address)</dd>
            <dt class="col-sm-4">Licence Number:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Doctor.LicenceNumber)</dd>
        </dl>

        <form method="post" class="text-center">
            <input type="hidden" asp-for="Doctor.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
