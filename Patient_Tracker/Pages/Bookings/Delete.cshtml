@page
@model Patient_Tracker.Pages.Bookings.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<div class="container center-content">
    <hr />
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">PPS Number:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Booking.BookingPPS)</dd>
            <dt class="col-sm-4">Name:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Booking.BookingName)</dd>
            <dt class="col-sm-4">Date:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Booking.BookingDate)</dd>
            <dt class="col-sm-4">Time:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Booking.BookingTime)</dd>
        </dl>
    </div>

    <form method="post">
        <input type="hidden" asp-for="Booking.BookingID" />
        <input type="submit" value="Delete" class="btn" style="background-color:red" /> |
        <a asp-page="./Index" class="btn" style="background-color:blue">Back to List</a>
    </form>
</div>
