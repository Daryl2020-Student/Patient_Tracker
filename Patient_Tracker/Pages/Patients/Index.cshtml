@page
@model Patient_Tracker.Pages.Patients.IndexModel

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <h1 class="mt-4">Patients</h1>

    <p>
        <a asp-page="Create" class="btn btn-primary">Create New</a>
    </p>

    <form>
        <p>
            Title: <input type="text" asp-for="SearchString" />
            <input type="submit" value="Filter" />
        </p>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th>PPS Number</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>DOB</th>
                <th>Next Of Kin</th>
                <th>Blood Type</th>
                <th>Gender</th>
                <th>Phone Number</th>
                <th>Doctor</th>
                <th></th>
            </tr>
        </thead>
        <tbody> 
            @foreach (var item in Model.Patient)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.DoctorName)</td>
                    <td>@Html.DisplayFor(modelItem => item.PPSNo)</td>
                    <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                    <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                    <td>@Html.DisplayFor(modelItem => item.DOB)</td>
                    <td>@Html.DisplayFor(modelItem => item.NextOfKin)</td>
                    <td>@Html.DisplayFor(modelItem => item.BloodType)</td>
                    <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                    <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>

                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-secondary">History</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
